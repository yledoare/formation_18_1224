<odoo>
  <data>
    <record id="action_estate_mail" model="ir.actions.act_window">
      <field name="name">Estate Location Mail</field>
      <field name="res_model">estate.location</field>
      <field name="view_mode">list,form</field>
    </record>   
    <record id="action_estate_mail3" model="ir.ui.view">
      <field name="model">estate.property</field>
      <field name="arch" type="xml">
        <form string="Estate Property">
          <sheet>
            <group>
              <field name="description"/>
              <field name="street"/>
              <field name="city"/>
              <field name="zip"/>
              <field name="country_id"/>
              <field name="type"/>
              <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" />
              <field name="is_sold"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>